@using Westwind.Globalization
@model ParTech.ImageLibrary.Core.ViewModels.Account.LocalPasswordModel

<h3>@DbRes.T("ChangePasswordPartial.PageSubtitle", "Resources")</h3>

@using (Html.BeginForm("ChangePassword", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <fieldset>
        <legend>@DbRes.T("ChangePasswordPartial.ChangePasswordFormLegend", "Resources")</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.OldPassword, new { @class = "required" } )
                @Html.PasswordFor(m => m.OldPassword)
                @Html.ValidationMessageFor(m => m.OldPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.NewPassword, new { @class = "required" } )
                @Html.PasswordFor(m => m.NewPassword)
                @Html.ValidationMessageFor(m => m.NewPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "required" } )
                @Html.PasswordFor(m => m.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </li>
        </ol>
        <input type="submit" value="@DbRes.T("ChangePasswordPartial.BtnSubmit", "Resources")" />
    </fieldset>
}
