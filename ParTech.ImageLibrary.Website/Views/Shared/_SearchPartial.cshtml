@using ParTech.ImageLibrary.Core.ViewModels.General
@using Westwind.Globalization
@model SearchModel

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Search", "General", FormMethod.Post, new { id = "searchForm" })) {
        @Html.AntiForgeryToken()
        @Html.TextBoxFor(m => m.SearchString, new { placeholder = DbRes.T("SearchPartial.SearchStringPlaceholder", "Resources") })
        @Html.ValidationMessageFor(m => m.SearchString)

        @Html.HiddenFor(m => m.FieldName)
    }
}